{
  "watch": [
    "index.js",
    "routes",
    "models",
    "middleware",
    "utils"
  ],
  "ignore": [
    "node_modules/**",
    "*.test.js",
    "*.spec.js",
    "tests/**",
    "scripts/**",
    ".git/**",
    "*.log",
    "*.json.backup"
  ],
  "ext": "js,json",
  "delay": 1000,
  "verbose": false,
  "env": {
    "NODE_ENV": "development"
  }
}

